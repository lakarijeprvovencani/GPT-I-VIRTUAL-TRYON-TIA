{
  "name": "Virtual Try-On Widget",
  "type": "app-extension",
  "target": "section",
  "settings": [
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Isprobaj",
      "info": "Text displayed on the try-on button"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "outline",
          "label": "Outline"
        }
      ],
      "default": "primary"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#007cba"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "label": "Button Border Radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 6,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Product Card Settings"
    },
    {
      "type": "checkbox",
      "id": "show_product_card",
      "label": "Show Product Card",
      "default": true,
      "info": "Display mini product information above the button"
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Card Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "card_border_color",
      "label": "Card Border Color",
      "default": "#e0e0e0"
    },
    {
      "type": "range",
      "id": "card_border_radius",
      "label": "Card Border Radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 8,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Modal Settings"
    },
    {
      "type": "text",
      "id": "modal_title",
      "label": "Modal Title",
      "default": "Virtual Try-On",
      "info": "Title displayed in the modal header"
    },
    {
      "type": "color",
      "id": "modal_background",
      "label": "Modal Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "modal_header_background",
      "label": "Modal Header Background",
      "default": "#f8f9fa"
    },
    {
      "type": "range",
      "id": "modal_border_radius",
      "label": "Modal Border Radius",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 12,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "select",
      "id": "widget_alignment",
      "label": "Widget Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "widget_margin_top",
      "label": "Top Margin",
      "min": 0,
      "max": 60,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "widget_margin_bottom",
      "label": "Bottom Margin",
      "min": 0,
      "max": 60,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Advanced Settings"
    },
    {
      "type": "checkbox",
      "id": "compact_mode",
      "label": "Compact Mode",
      "default": false,
      "info": "Enable compact mode for mobile devices"
    },
    {
      "type": "checkbox",
      "id": "enable_animations",
      "label": "Enable Animations",
      "default": true,
      "info": "Enable smooth animations and transitions"
    },
    {
      "type": "checkbox",
      "id": "close_on_escape",
      "label": "Close on Escape Key",
      "default": true,
      "info": "Allow closing modal with Escape key"
    },
    {
      "type": "checkbox",
      "id": "close_on_outside_click",
      "label": "Close on Outside Click",
      "default": true,
      "info": "Allow closing modal by clicking outside"
    }
  ],
  "presets": [
    {
      "name": "Virtual Try-On Widget",
      "category": "Apps"
    }
  ]
}
